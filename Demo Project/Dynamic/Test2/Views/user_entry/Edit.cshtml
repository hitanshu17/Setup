@model Test2.Models.user_entry

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_admindashboard.cshtml";
}
    <body class="bg-gradient-primary">

        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Edit Entry</h1>
                                </div>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="user" method="post">
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.comp_name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.comp_name, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.EditorFor(model => model.ctags, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ctags, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.caddress, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.caddress, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.cemail, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.cemail, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.EditorFor(model => model.caltemail, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.caltemail, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                @Html.EditorFor(model => model.cmobile, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.cmobile, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-sm-6">
                                                @Html.EditorFor(model => model.caltmobile, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.caltmobile, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.addnotes, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.addnotes, "", new { @class = "text-danger" })
                                        </div>
                                        <h1 align="center">
                                            <input type="submit" value="Submit" class="btn btn-success btn-lg" />
                                            <a href="/user_entry/Index" class="btn  btn-danger btn-lg"> Back </a>
                                        </h1>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

       