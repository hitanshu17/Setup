
@{
    ViewBag.Title = "ToDo";
    Layout = "~/Views/Shared/_userview.cshtml";
}

    <body class="bg-gradient-primary">

        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Ideas</h1>
                                </div>

                                @using (Html.BeginForm("ToDo", "Home", FormMethod.Post, new { enctype = "multipart /form-data" }))
                                {
                                    <form class="user">
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                <input type="text" class="form-control form-control-user" id="headings" name="headings" required placeholder="Heading">
                                            </div>
                                            <div class="col-sm-6">
                                                <select id="tagname" name="tagname" class="form-control">
                                                    <option>Select Tag</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="inotes" name="inotes" required placeholder="Add Notes">
                                        </div>
                                        <h1 align="center">
                                            <a href="/Home/Index" class="btn  btn-warning btn-lg"> DataEntry </a>
                                            <input type="submit" value="Submit" class="btn btn-success" />
                                            <a href="/AdminLog/Login" class="btn  btn-danger btn-lg"> Admin </a>
                                        </h1>

                                    </form>
                                }
                                </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

